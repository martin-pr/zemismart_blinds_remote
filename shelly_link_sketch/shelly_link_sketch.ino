void loop() {
  WiFiClient client = server.available();

  const char* toSend = nullptr;

  if (client) {
    Serial.println("-- new client --");
    String currentLine = "";
    while (client.connected()) {
      if (client.available()) {
        char c = client.read();
        Serial.write(c);

        if (c == '\n') {
          if (currentLine.length() == 0) {
            // if the current line is blank, you got two newline characters in a row.
            // that's the end of the client HTTP request, so send a response:
            printWebPageContent(client);
            break;
          } else {
            // one new line character - clear the current content
            currentLine = "";
          }
        } 
        
        else if (c != '\r') {
          currentLine += c;
        }

        // Check to see if the client request was "GET /X"
        if (currentLine.endsWith("GET /R")) {
          setLedColor(255, 0, 0);
        }
        if (currentLine.endsWith("GET /G")) {
          setLedColor(0, 255, 0);
        }
        if (currentLine.endsWith("GET /B")) {
          setLedColor(0, 0, 255);
        }
        if (currentLine.endsWith("GET /W")) {
          setLedColor(255, 255, 255);
        }

        if (currentLine.endsWith("GET /internal_blind_down")) {
          if(millis() > internal_stop_moving_time) {
            toSend = internal_blind_down;
            internal_stop_moving_time = millis() + internal_timeout;
          } else {
            toSend = internal_blind_stop;
            internal_stop_moving_time = 0;
          }
        }
        if (currentLine.endsWith("GET /internal_blind_up")) {
          if(millis() > internal_stop_moving_time) {
            toSend = internal_blind_up;
            internal_stop_moving_time = millis() + internal_timeout;
          } else {
            toSend = internal_blind_stop;
            internal_stop_moving_time = 0;
          }
        }

        if (currentLine.endsWith("GET /external_blind_down")) {
          if(millis() > external_stop_moving_time) {
            toSend = external_blind_down;
            external_stop_moving_time = millis() + external_timeout;
          } else {
            toSend = external_blind_stop;
            external_stop_moving_time = 0;
          }
        }
        if (currentLine.endsWith("GET /external_blind_up")) {
          if(millis() > external_stop_moving_time) {
            toSend = external_blind_up;
            external_stop_moving_time = millis() + external_timeout;
          } else {
            toSend = external_blind_stop;
            external_stop_moving_time = 0;
          }
        }
      }
    }

    client.stop();
    Serial.println("-- client disconnected --");

    if(toSend != nullptr) {
      sendCommand(toSend);
    }
  }
